room_index = 0;
room_list = ds_list_create();
tile_depth = -1;
tileset = -1;
world_width = -1;
world_height = -1;

start_room = room;
start_player_x = -1;
start_player_y = -1;

is_collecting_data = false;

muted_before = global.muteMusic;
