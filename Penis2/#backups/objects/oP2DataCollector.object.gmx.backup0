#event destroy
global.muteMusic = muted_before;

ds_list_destroy(room_list);

ds_list_destroy(excluded_tile_alpha);
ds_list_destroy(excluded_tile_background);
ds_list_destroy(excluded_tile_blend);
ds_list_destroy(excluded_tile_depth);
